<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pattu.getattendence">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/studentsss"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LogIn"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".studentFragment" />
        <activity
            android:name=".AddStudent"
            android:label="AddStudent" />
        <activity
            android:name=".StudentDetails"
            android:label="StudentDetails" />
        <activity
            android:name=".ListAttendenceStudent"
            android:label="Student List" />
        <activity
            android:name=".CustomAttendence"
            android:label="TakeAttendence" />
        <activity
            android:name=".RadioActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ForgotPassword"
            android:label="ForgetPassword"/>
        <activity android:name=".SignUp"
            android:label="Create New Account"/>
        <activity android:name=".Setting"
            android:label="Setting"/>
        <activity
            android:name=".ViewStudent"
            android:label="View Student" />
        <activity android:name=".CustomViewStudent" />
        <activity android:name=".About"
            android:label="About"/>
    </application>

</manifest>